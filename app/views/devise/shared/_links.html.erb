<div class="text-center mt-4">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "text-blue-500 hover:underline block mb-2" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "text-blue-500 hover:underline block mb-2" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name), class: "text-blue-500 hover:underline block mb-2" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届きませんか？", new_confirmation_path(resource_name), class: "text-blue-500 hover:underline block mb-2" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "ロック解除のメールが届きませんか？", new_unlock_path(resource_name), class: "text-blue-500 hover:underline block mb-2" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)} でサインイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "bg-primary hover:bg-primary text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline block w-full mb-2" %>
    <% end %>
  <% end %>
</div>
