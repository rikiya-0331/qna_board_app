<% if @question.favorited_by?(current_user) %>
  <%= button_to 'お気に入り解除', question_favorites_path(@question), method: :delete, remote: true, class: "text-red-600 hover:text-red-800" %>
<% else %>
  <%= button_to 'お気に入りに追加', question_favorites_path(@question), method: :post, remote: true, class: "text-blue-600 hover:text-blue-800" %>
<% end %>
