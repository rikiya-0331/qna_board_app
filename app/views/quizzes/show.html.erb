<!-- ページ全体を中央に配置し、Stimulusコントローラ「quiz」で管理するコンテナ -->
<div class="min-h-screen bg-page-bg flex justify-center items-center p-4"
     data-controller="quiz"
     data-quiz-question-id-value="<%= @question.id %>"> <!-- 現在の問題IDをStimulusに渡す -->

  <!-- クイズカードのコンテナ -->
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-2xl w-full">

    <!-- 質問表示エリア -->
    <div class="mb-6">
      <p class="text-sm text-gray-500">Question</p>
      <h2 class="text-2xl md:text-3xl font-bold text-gray-800"><%= @question.title_jp %></h2>
      <p class="text-lg text-gray-600 mt-1"><%= @question.title_en %></p>
    </div>

    <!-- 選択肢表示エリア -->
    <div class="space-y-3 mb-6" data-quiz-target="choicesContainer"> <!-- 選択肢全体を管理するターゲット -->
      <% @answer_choices.each do |choice| %>
        <!-- 各選択肢のラベル。クリックでStimulusのselectChoiceメソッドを実行 -->
        <label class="block w-full p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors"
               data-action="click->quiz#selectChoice"
               data-quiz-target="choice"
               data-choice-id="<%= choice.id %>">
          <input type="radio" name="answer_choice" value="<%= choice.id %>" class="hidden"> <!-- ラジオボタン自体は非表示 -->
          <span class="font-semibold text-gray-700"><%= choice.content_jp %></span>
          <span class="text-sm text-gray-500 ml-2">(<%= choice.content_en %>)</span>
        </label>
      <% end %>
    </div>

    <!-- アクションボタン群 -->
    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-4">
      <!-- 解答提出ボタン -->
      <button class="w-full sm:w-auto flex-1 bg-primary text-white font-bold py-3 px-6 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary disabled:bg-gray-400 transition-colors"
              data-action="click->quiz#submitAnswer"
              data-quiz-target="submitButton">
        解答する
      </button>
      <!-- 解答を見るボタン (初期状態は非表示) -->
      <button class="w-full sm:w-auto flex-1 bg-primary text-gray-700 font-bold py-3 px-6 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary hidden transition-colors"
              data-action="click->quiz#toggleAnswerExplanation"
              data-quiz-target="showAnswerButton">
        解答を見る
      </button>
      <!-- 次へボタン (初期状態は非表示) -->
      <button class="w-full sm:w-auto flex-1 bg-primary text-white font-bold py-3 px-6 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary hidden transition-colors"
              data-action="click->quiz#nextQuestion"
              data-quiz-target="nextButton">
        次へ
      </button>
    </div>

    <!-- 正誤判定フィードバックエリア (初期状態は非表示) -->
    <div class="hidden mt-6 p-4 rounded-lg text-center"
         data-quiz-target="feedbackContainer"> <!-- フィードバックコンテナをターゲットとして指定 -->
      <p class="font-bold text-xl" data-quiz-target="feedbackText"></p> <!-- フィードバックテキストをターゲットとして指定 -->
    </div>

    <!-- 解答解説表示エリア (初期状態は非表示) -->
    <div class="hidden mt-6 p-4 bg-gray-50 border border-gray-200 rounded-lg"
         data-quiz-target="answerExplanation"> <!-- 解説エリアをターゲットとして指定 -->
      <h4 class="font-bold text-gray-800">正解と解説</h4>
      <p class="text-gray-700 mt-2"><%= @question.answer_jp %></p>
      <div class="flex items-center space-x-2 mt-1">
        <p class="text-gray-600 text-sm">(<%= @question.answer_en %>)</p>
        <%# Stimulus Audio Player %>
        <div data-controller="audio-player" data-audio-player-url-value="<%= audio_question_path(@question) %>">
          <button type="button" data-action="click->audio-player#toggle" class="text-gray-500 hover:text-gray-700 focus:outline-none">
            <%# Play Icon %>
            <svg data-audio-player-target="playIcon" class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.91 11.672a.375.375 0 0 1 0 .656l-5.603 3.113a.375.375 0 0 1-.557-.328V8.887c0-.286.307-.466.557-.327l5.603 3.112Z" />
            </svg>
            <%# Stop Icon %>
            <svg data-audio-player-target="stopIcon" class="h-6 w-6 hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 9.563C9 9.254 9.254 9 9.563 9h4.874c.309 0 .563.254.563.563v4.874c0 .309-.254.563-.563.563H9.563A.562.562 0 0 1 9 14.437V9.564Z" />
            </svg>
          </button>
        </div>
      </div>
    </div>

  </div>
</div>