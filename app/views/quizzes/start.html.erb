<!-- ページ全体を中央に配置するためのコンテナ -->
<div class="min-h-screen bg-page-bg flex flex-col justify-center items-center">
  <!-- クイズ開始フォームを囲むカードスタイルのコンテナ -->
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full text-center">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">クイズに挑戦する</h1>
    <p class="text-gray-600 mb-8">下のカテゴリを選択して「クイズ開始」ボタンを押してください。</p>

    <!-- クイズ開始フォーム: POST /quiz/start へ送信されます -->
    <%= form_with url: quiz_start_path, method: :post, class: "space-y-6" do |form| %>
      <div>
        <!-- カテゴリ選択のドロップダウンメニュー -->
        <%= form.collection_select :category_id, @categories, :id, :name, { prompt: "カテゴリを選択してください" }, { class: "block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" } %>
      </div>

      <div>
        <!-- クイズ開始ボタン -->
        <%= form.submit "クイズ開始", class: "w-full bg-primary text-white font-bold py-3 px-4 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary cursor-pointer transition duration-300 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>