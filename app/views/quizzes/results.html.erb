<!-- ページ全体を中央に配置するためのコンテナ -->
<div class="min-h-screen bg-page-bg flex flex-col justify-center items-center">
  <!-- クイズ結果を表示するカードスタイルのコンテナ -->
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full text-center">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">クイズ結果</h1>
    <p class="text-gray-600 mb-6">カテゴリ: <%= @quiz_history.category.name %></p>

    <!-- スコアと正解数の表示エリア -->
    <div class="space-y-4 text-lg">
      <!-- スコア表示 -->
      <div class="p-4 bg-blue-50 rounded-lg">
        <p class="text-gray-600">スコア</p>
        <p class="text-3xl font-bold text-blue-600"><%= @quiz_history.score %></p>
      </div>
      <!-- 正解数表示 -->
      <div class="p-4 bg-green-50 rounded-lg">
        <p class="text-gray-600">正解数</p>
        <p class="text-2xl font-semibold text-green-600"><%= @quiz_history.correct_answers %> / <%= @quiz_history.total_questions %></p>
      </div>
    </div>

    <!-- アクションボタン群 -->
    <div class="mt-8">
      <!-- もう一度クイズに挑戦するボタン -->
<%= link_to "もう一度挑戦する", quiz_start_path, class: "w-full bg-primary text-white font-bold py-3 px-4 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary cursor-pointer transition duration-300 ease-in-out block" %>
      <!-- トップに戻るボタン -->
      <%= link_to "トップに戻る", root_path, class: "w-full mt-3 bg-primary text-gray-700 font-bold py-3 px-4 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary cursor-pointer transition duration-300 ease-in-out block" %>
    </div>
  </div>
</div>
